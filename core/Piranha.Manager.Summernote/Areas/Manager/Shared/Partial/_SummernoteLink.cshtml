<div id="summernotelink" class="modal" tabindex="-1" role="dialog" :style="'z-index:' + zindex">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Insert/edit link</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="d-block">Url</label>
                    <div class="btn-group float-right">
                        <button v-on:click.prevent="selectPage" class="btn btn-secondary">Page</button>
                        <button v-on:click.prevent="selectPost" class="btn btn-secondary">Post</button>
                        <button v-on:click.precent="selectMedia" class="btn btn-secondary">Media</button>
                    </div>
                    <input v-model="url" class="form-control" type="text" style="width:280px">
                </div>
                <div class="form-group">
                    <label>Text to display</label>
                    <input v-model="text" class="form-control" type="text">
                </div>
                <div class="form-group">
                    <label>Target</label>
                    <select v-model="target" class="form-control">
                        <option value="">None</option>
                        <option value="_blank">New window</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button v-on:click.prevent="save" type="button" class="btn btn-success btn-labeled"><i class="fas fa-check"></i>Save</button>
            </div>
        </div>
    </div>
</div>